<%- include('../partials/head.ejs') %>

<section class="movie_single">
          <div class="wrapper">
              <img src="<%= data.poster_path %>" class="movie_image"></img>
              <div class="single_meta">
                  <span class="vote_average"><%= data.vote_average %></span>
                  <h1 class="title"><%= data.title %></h1>
                  <p class="runtime"><%= data.runtime %></p>
                  <p class="release_date"><%= data.release_date %></p>
                  <ul class="genres">
                      <a class="genre_id">
                          <li class="name"></li>
                      </a>
                  </ul>
                  <p class="overview"></p>
                  <table>
                      <tr>
                          <td class="table_title">Original title</td>
                          <td><span class="original_title "><%= data.original_title %></span></td>
                      </tr>
                      <tr>
                          <td class="table_title">Tagline</td>
                          <td><%= data.tagline %></td>
                      </tr>
                      <tr>
                          <td class="table_title">Moviebudget</td>
                          <td><span class="budget"><%= data.budget %></span></td>

                      </tr>
                      <tr>
                          <td class="table_title">Revenue</td>
                          <td><span class="revenue"><%= data.revenue %></span></td>
                      </tr>
                      <tr>
                          <td class="table_title">Language</td>
                          <td><img class="lang_image" /></td>
                      </tr>
                      <tr>
                          <td class="table_title">Total votes</td>
                          <td><span class="vote_count"><%= data.vote_count %></span> votes</td>
                      </tr>
                  </table>
                  <p class="inline"><a class="similar_url url_btn filter-btn">More movies like <span class="title"></span></a></p>
                  <p class="inline"><a target="_blank" class="imdb_url url_btn filter-btn">More on IMDB</a></p>
              </div>
          </div>
      </section>

<%- include('../partials/foot.ejs') %>
